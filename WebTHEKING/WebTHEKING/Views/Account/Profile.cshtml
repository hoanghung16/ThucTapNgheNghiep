@model WebTHEKING.Models.User
@{
    ViewData["Title"] = "Thông tin cá nhân";
}

<main>
    <section class="section">
        <div class="container" style="max-width: 600px;">
            <h2 class="section-title">Tài Khoản Của Bạn</h2>

            <div style="background-color: #fff; padding: 30px; border-radius: 8px; box-shadow: 0 4px 15px rgba(0,0,0,0.1);">
                <div class="mb-3">
                    <strong>Họ và tên:</strong>
                    <p>@Model.FullName</p>
                </div>
                <div class="mb-3">
                    <strong>Tên đăng nhập:</strong>
                    <p>@Model.Username</p>
                </div>
                <div class="mb-3">
                    <strong>Email:</strong>
                    <p>@Model.Email</p>
                </div>

                <hr>

                <form asp-controller="Account" asp-action="Logout" method="post" class="mt-4">
                    <button type="submit" class="cta-button" style="width: 100%; background-color: #D9534F;">Đăng Xuất</button>
                </form>
            </div>

        </div>
    </section>
</main>