@model WebTHEKING.Models.Product
@{
    ViewData["Title"] = Model.Name; 
}
<main>
    <section class="section">
        <div class="container product-detail-container">
            <div class="product-image-gallery">
                <img src="@Url.Content(Model.ImageUrl)" alt="@Model.Name" id="product-image">
            </div>
            <div class="product-info">
                <h1 id="product-name">@Model.Name</h1>
                <p class="product-price" id="product-price">@Model.Price.ToString("N0")đ</p>
                <p id="product-description" class="product-description">@Model.Description</p>
                <div class="quantity-selector">
                    <label for="quantity">Số lượng:</label>
                    <input type="number" id="quantity" value="1" min="1">
                </div>
                <button id="add-to-cart-btn" class="cta-button">Thêm vào giỏ hàng</button>
            </div>
        </div>
    </section>
</main>
